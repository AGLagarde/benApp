<?xml version="1.0" encoding="utf-8"?>


  <LinearLayout
    android:id="@+id/task_tv_name_tasks" android:orientation="horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/item_task_bg" android:backgroundTint="@color/colorWhite"
                android:clickable="true" android:layout_marginTop="15dp" android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" android:layout_marginBottom="15dp"
                android:layout_alignWithParentIfMissing="true">

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical|left">

      <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_tv_task" android:layout_marginStart="20dp"
        android:textSize="18sp" android:textColor="#000000" android:textStyle="bold"/>

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical|end" android:layout_marginEnd="0dp">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:srcCompat="@drawable/point_task"
        android:id="@+id/point_task"
      />
    </FrameLayout>


  </LinearLayout>


