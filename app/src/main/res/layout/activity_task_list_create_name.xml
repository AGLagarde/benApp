<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".NavigationBottomBar.Fragment.Task.TaskListCreateNameActivity">


  <ImageView
    android:id="@+id/create_taskList_arrow_back"
    android:layout_width="21dp"
    android:layout_height="14dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/keyboard_backspace" />

  <TextView
    android:text="Attribue un nom à ta nouvelle liste"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/task_create_name_tv" app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="192dp" app:layout_constraintHorizontal_bias="0.497"/>
  <EditText
    android:id="@+id/task_create_name_editText"
    android:layout_width="@dimen/size_edit_text_width"
    android:layout_height="@dimen/size_edit_text_height"
    android:background="@drawable/edit_text_bg"
    android:ems="10"
    android:hint="Nom de la liste de tâche"
    android:paddingLeft="20dp" app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
    android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/task_create_name_tv"
    android:singleLine="true"/>

  <Button
    android:id="@+id/task_create_name_btn"
    android:layout_width="@dimen/size_button_width"
    android:layout_height="@dimen/size_button_height"
    android:background="@drawable/edit_text_bg"
    android:backgroundTint="#F91F4C"
    android:text="Valider"
    android:textColor="@android:color/background_light"
    android:textSize="@dimen/size_button_font" app:layout_constraintTop_toBottomOf="@+id/task_create_name_editText"
    android:layout_marginTop="28dp" app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
