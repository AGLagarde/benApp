<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".House.HouseActivity">

  <TextView
    android:text="Pour utiliser l’application, \ntu dois faire partie \nd&apos;une colocation \nou en créer une."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22dp"
    android:textColor="#071e22"
    android:lineSpacingExtra="4sp"

    android:id="@+id/house_tv" android:layout_marginTop="116dp" app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="68dp" android:textStyle="bold"
    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.105"/>

  <Button
    android:text="Rejoindre une colocation"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_bg"
    android:backgroundTint="#F91F4C"
    android:textColor="@android:color/background_light"
    android:id="@+id/house_join"
    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="84dp"
    app:layout_constraintTop_toBottomOf="@+id/house_tv"/>

  <Button
    android:text="Créer une colocation"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_bg"
    android:backgroundTint="#040f30"
    android:textColor="@android:color/background_light"
    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/house_create"
    app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="12dp"
    app:layout_constraintTop_toBottomOf="@+id/house_join"/>


</android.support.constraint.ConstraintLayout>
