<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <LinearLayout
    android:id="@+id/linear_task"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:background="@drawable/pattern">

    <TextView
      android:text="Liste des missions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/task_tv_name_mission"
      android:layout_gravity="center_vertical|left"
      android:layout_marginStart="20dp"
      android:textStyle="bold"
      android:textSize="30sp" android:textColor="#000000"/>
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="70dp"
      android:layout_gravity="center_vertical|end"
      android:layout_marginStart="20dp"
      app:srcCompat="@drawable/add_mission" android:id="@+id/task_floating_btn_add_mission"
      android:clickable="true"/>

  </LinearLayout>

  <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/linear_task"
    android:layout_below="@+id/linear_task" android:id="@+id/task_rv_mission" android:background="#f8fafe"/>

</RelativeLayout>
