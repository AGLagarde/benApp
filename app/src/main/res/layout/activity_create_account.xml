<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".CreateAccount.CreateAccountActivity">


  <Button
    android:id="@+id/create_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="265dp"
    android:text="Valider"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/create_editText_password" />

  <EditText
    android:id="@+id/create_editText_firstname"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="160dp"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:hint="PrÃ©nom"
    app:layout_constraintBottom_toTopOf="@+id/create_editText_lastname"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/create_editText_lastname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:hint="Nom"
    app:layout_constraintBottom_toTopOf="@+id/create_editText_email"
    app:layout_constraintEnd_toEndOf="@+id/create_editText_firstname"
    app:layout_constraintTop_toBottomOf="@+id/create_editText_firstname" />

  <EditText
    android:id="@+id/create_editText_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:hint="Email"
    app:layout_constraintBottom_toTopOf="@+id/create_editText_password"
    app:layout_constraintStart_toStartOf="@+id/create_editText_lastname"
    app:layout_constraintTop_toBottomOf="@+id/create_editText_lastname" />

  <EditText
    android:id="@+id/create_editText_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:ems="10"
    android:hint="Mot de passe"
    app:layout_constraintBottom_toTopOf="@+id/create_btn"
    app:layout_constraintStart_toStartOf="@+id/create_editText_email"
    app:layout_constraintTop_toBottomOf="@+id/create_editText_email" />

</android.support.constraint.ConstraintLayout>
