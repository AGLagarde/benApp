<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".House.JoinHouse.HouseJoinActivity">

  <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
                android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:background="#f5f6f8">

    <TextView
      android:text="Je rejoins \nune colocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="30sp"
      android:textColor="#071e22"
      android:lineSpacingExtra="4sp"
      android:id="@+id/house_tv" android:textStyle="bold"
      android:layout_marginTop="150dp"
      android:layout_marginLeft="70dp"
      app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
      android:text="Inscrivez le code d’invitation \nqui t'a été transmis par email. \nPuis clique sur Valider pour te connecter."
      android:textSize="15sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="70dp"
      android:id="@+id/house_join_tv_description"
      android:textAlignment="viewStart"/>

    <EditText
      android:layout_width="270dp"
      android:layout_height="50dp"
      android:paddingStart="20dp"
      android:inputType="textPersonName"
      android:background="@drawable/edit_text_bg"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="70dp"
      android:ems="10"
      android:id="@+id/house_join_editText" android:hint="Code d'invitation"/>


    <Button
      android:text="Valider"
      android:layout_width="270dp"
      android:layout_height="wrap_content"
      android:background="@drawable/edit_text_bg"
      android:backgroundTint="#F91F4C"
      android:textColor="@android:color/background_light"
      android:id="@+id/house_join_btn"
      android:layout_marginLeft="70dp"
      android:layout_marginTop="25dp"

    />


  </LinearLayout>



</RelativeLayout>
