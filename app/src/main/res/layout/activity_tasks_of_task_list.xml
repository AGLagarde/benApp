<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".NavigationBottomBar.Fragment.Task.TasksOfTaskListActivity">

  <LinearLayout
    android:id="@+id/linear_task"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:background="@drawable/pattern">

    <TextView
      android:text="TÃ¢ches de la mission"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/task_tv_name_mission"
      android:layout_gravity="center_vertical|left"
      android:layout_marginStart="20dp"
      android:textStyle="bold"
      android:textSize="30sp" android:textColor="#000000"/>
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="61dp"
      android:layout_gravity="center_vertical|right"
      android:layout_marginStart="20dp"
      app:srcCompat="@drawable/floating_btn" android:id="@+id/task_floating_btn_add_task"
      android:clickable="true"/>

  </LinearLayout>
  <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear_task" android:id="@+id/task_rv_tasks"/>

</RelativeLayout>
